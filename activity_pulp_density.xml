<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintVertical_bias="0.5"
    tools:context="com.mining.mmbalance.pulp_density">

    <TextView
        android:id="@+id/pulpDensity_title"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="610dp"
        android:text="@string/pulpDensity_title"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/pulp_solid_density_title"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="520dp"
        android:text="@string/pulp_solid_density_title"
        android:textAlignment="center"
        android:textColor="@color/lihgt_grey"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/pulp_solid_density_edit"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="470dp"
        android:background="@color/grey"
        android:ems="10"
        android:textColor="@color/lihgt_grey"
        android:textColorLink="#00E0DBDB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/solid_percent_title"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="410dp"
        android:text="@string/weight_percent_title"
        android:textAlignment="center"
        android:textColor="@color/lihgt_grey"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />


    <EditText
        android:id="@+id/solid_percent_edit"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="360dp"
        android:background="@color/grey"
        android:ems="10"
        android:textColor="@color/lihgt_grey"
        android:textColorLink="#00E0DBDB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/pulp_density_calculate"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="290dp"
        android:background="@drawable/button"
        android:text="@string/Calculate"
        android:textColor="@color/lihgt_grey"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/pulp_pulp_density"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="220dp"
        android:text="@string/pulp_pulp_density"
        android:textAlignment="center"
        android:textColor="@color/lihgt_grey"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/pulp_pulp_density_report"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="170dp"
        android:inputType="numberDecimal"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/home"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button"
        android:text="HOME"
        android:textColor="@color/lihgt_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>